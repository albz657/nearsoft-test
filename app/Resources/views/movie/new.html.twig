{% extends 'base.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-md-12">

        <div class="panel panel-default table-responsive">
            <div class="panel-heading"><h1>Movie creation</h1></div>
        </div>
    {{ form_start(form) }}
        <fieldset>
            <div class="form-group row">
                <div class="bg-danger">{{ form_errors(form.name) }}</div>
                {{ form_label(form.name, 'Name :', {'label_attr': {'class':'col-xs-1 control-label'}}) }}
                <div class="col-sm-4">
                    {{ form_widget(form.name, {'attr': {'class':'form-control'}}) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="bg-danger">{{ form_errors(form.year) }}</div>
                {{ form_label(form.year, 'Year :', {'label_attr': {'class':'col-xs-1 control-label'}}) }}
                <div class="col-sm-4">
                    {{ form_widget(form.year, {'attr': {'class':'form-control'}}) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="bg-danger">{{ form_errors(form.genre) }}</div>
                {{ form_label(form.genre, 'Genre :', {'label_attr': {'class':'col-xs-1 control-label'}}) }}
                <div class="col-sm-4">
                    {{ form_widget(form.genre, {'attr': {'class':'form-control'}}) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="bg-danger">{{ form_errors(form.actors) }}</div>
                {{ form_label(form.actors, 'Actors :', {'label_attr': {'class':'col-xs-1 control-label'}}) }}
                <div class="col-sm-4">
                    {{ form_widget(form.actors, {'attr': {'class':'form-control'}}) }}
                </div>
            </div>
        </fieldset>
        <div class="form-group row">
            <div class="col-sm-10 col-sm-offset-3">
                <button type="submit" class="btn btn-default">Create</button>
            </div>
        </div>
    {{ form_end(form) }}
    <ul>
        <li>
            <a href="{{ path('movie_index') }}">Back to the list</a>
        </li>
    </ul>
    </div>
</div>
{% endblock %}
