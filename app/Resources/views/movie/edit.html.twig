{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/app/bootstrap-datepicker/css/bootstrap-datepicker.min.css') }}" rel="stylesheet" type="text/css">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/bootstrap-datepicker/js/bootstrap-datepicker.min.js') }}"></script>
    <script>
        //datepicker
        jQuery(document).ready(function($){
            var fecha = new Date();
            fecha.setDate(tomorrow.getDate());
            $("input[type='text'].js-datepicker").datepicker("setDate" , fecha);
        });

        jQuery("input[type='text'].js-datepicker").datepicker({
            defaultDate: false,
            format: 'yyyy',
            autoclose: true,
            viewMode: "years",
            minViewMode: "years"
        });
    </script>
{% endblock %}
{% block body %}
<div class="row">
    <div class="col-md-12">

        <div class="panel panel-default table-responsive">
            <div class="panel-heading"><h1>Movie edit</h1></div>
        </div>
    {{ form_start(edit_form) }}
        <fieldset>
            <div class="form-group row">
                <div class="bg-danger">{{ form_errors(edit_form.name) }}</div>
                {{ form_label(edit_form.name, 'Name :', {'label_attr': {'class':'col-xs-1 control-label'}}) }}
                <div class="col-sm-4">
                    {{ form_widget(edit_form.name, {'attr': {'class':'form-control'}}) }}
                </div>
            </div>
            <div class="form-group row">
                <div class="bg-danger">{{ form_errors(edit_form.year) }}</div>
                {{ form_label(edit_form.year, 'Year :', {'label_attr': {'class':'col-xs-1 control-label'}}) }}
                <div class="col-sm-4">
                    {{ form_widget(edit_form.year, {'attr': {'class':'form-control js-datepicker'}}) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="bg-danger">{{ form_errors(edit_form.genre) }}</div>
                {{ form_label(edit_form.genre, 'Genre :', {'label_attr': {'class':'col-xs-1 control-label'}}) }}
                <div class="col-sm-4">
                    {{ form_widget(edit_form.genre, {'attr': {'class':'form-control'}}) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="bg-danger">{{ form_errors(edit_form.actors) }}</div>
                {{ form_label(edit_form.actors, 'Actors :', {'label_attr': {'class':'col-xs-1 control-label'}}) }}
                <div class="col-sm-4">
                    {{ form_widget(edit_form.actors, {'attr': {'class':'form-control'}}) }}
                </div>
            </div>
        </fieldset>
        <div class="form-group row">
            <div class="col-sm-10 col-sm-offset-3">
                <button type="submit" class="btn btn-default">Update</button>
            </div>
        </div>

    {{ form_end(edit_form) }}

        <ul>
            <li>
                <a href="{{ path('movie_index') }}">Back to the list</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
</div>
{% endblock %}
