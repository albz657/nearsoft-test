{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default table-responsive">
            <div class="panel-heading"><h1>Movie details</h1></div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-5">
        <table class="table table-bordered table-condensed table-striped table-hover">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ movie.name }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{% if movie.year %}{{ movie.year }}{% endif %}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{% if movie.genre %}{{ movie.genre.name }}{% endif %}</td>
            </tr>
            <tr>
                <th>Actors</th>
                <td>{% if movie.actors is not empty %}
                        {% for actor in movie.actors %}
                            {% if not loop.first %}<br> {% endif %}
                            {{ actor.name}}
                        {% endfor %}
                    {% endif %}
                </td>
            </tr>
            </tbody>
        </table>
        <ul>
            <li>
                <a href="{{ path('movie_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('movie_edit', { 'id': movie.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
</div>
{% endblock %}
